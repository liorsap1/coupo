<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.and.coup.ManagerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/man_new_cupon"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/man_new_coupon"/>
    <ImageView
        android:id="@+id/man_new_shop"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/man_new_shop"/>
    <ImageView
        android:id="@+id/man_new_sale"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/man_new_sale"
        android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
