<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.and.coup.NewCouponActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/new_coupon_logo" />

    <EditText
        android:id="@+id/coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape"
        android:ems="20"
        android:hint="שם הקופון"
        android:inputType="textPersonName"
        android:layoutDirection="rtl"
        android:padding="5dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/coupon_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:ems="20"
        android:hint="מספר קופון"
        android:gravity="right"
        android:background="@drawable/shape"
        android:inputType="number" />

    <EditText
        android:id="@+id/coupon_product_price"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:hint="מחיר לפני הנחה"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:ems="20"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layoutDirection="rtl"
            android:padding="40dp"
            android:layout_margin="10dp"
            android:textSize="17sp"
            android:textStyle="normal|bold"
            android:text="כמות הנחה באחוזים"/>
        <NumberPicker
            android:id="@+id/coupon_discount"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/coupon_picture"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:padding="40dp"
            android:text="העלה תמונה של המוצר"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/coupon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:hint="תוקף הקופון"
        android:background="@drawable/shape"
        android:ems="20"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/coupon_submit"
            style="@android:style/Widget.Button"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape"
            android:textSize="18sp"
            android:text="רשום קופון"
            android:textStyle="normal|bold" />
        <Button
            android:id="@+id/coupon_cancel"
            style="@android:style/Widget.Button"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape"
            android:textSize="18sp"
            android:text="ביטול"
            android:textStyle="normal|bold" />

    </LinearLayout>


</LinearLayout>
